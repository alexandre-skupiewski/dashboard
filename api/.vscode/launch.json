    "version": "0.2.0",
    "configurations": [       
        {
            "name": "Python Api Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--host",
                "0.0.0.0",
                "--port",
                "5001",
                "--reload"
            ],
            "jinja": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/api",
            "env": {
                "DB_HOST": "localhost",
                "API_TOKEN_ID": "supersecrettoken",
                "DATA_FOLDER": "${workspaceFolder}/data"
            }
        }
    ]
}